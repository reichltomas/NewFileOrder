<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="NewFileOrder.Views.YesNoDialogView"
        Title="YesNoDialogView">
  <Grid RowDefinitions="auto, *" ColumnDefinitions="*,*" Width="320" Height="160">
    <TextBlock Text="{Binding Message}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" TextAlignment="Center" VerticalAlignment="Center" />
    <Button IsDefault="True" Grid.Row="1" Grid.Column="0" Name="YesButton">Ano</Button>
    <Button IsCancel="True" Grid.Row="1" Grid.Column="1" Name="NoButton">Ne</Button>
  </Grid>
</Window>
